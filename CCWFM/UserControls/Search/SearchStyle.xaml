<UserControl x:Class="CCWFM.UserControls.Search.SearchStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel x:Name="LayoutRoot" Orientation="Horizontal" Background="White">
        <StackPanel  Orientation="Vertical" Background="White">
            <TextBlock VerticalAlignment="Center" Margin="5" Text="{Binding StylePerRow.Code,Mode=TwoWay}"></TextBlock>
            <TextBlock VerticalAlignment="Center" Margin="5" Text="{Binding StylePerRow.Description,Mode=TwoWay}"></TextBlock>
        </StackPanel>
        <Button  Name="BtnSearch" Click="BtnSearch_OnClick">
            <Image HorizontalAlignment="Stretch"  Width="30" Height="30"
                       VerticalAlignment="Stretch"
                       Source="/CCWFM;component/Images/Search.png"
                       Stretch="Uniform" />
        </Button>
    </StackPanel>
</UserControl>